{% extends 'base.html.twig' %}
{% block body %}
    <h1>Менеджеры</h1>
    <table class="table table-dark">
        <tr>
            <th>Номер</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отдел</th>
        </tr>
        {% for manager in managers %}
            <tr>
                <td>{{ manager.id }}</td>
                <td>{{ manager.name }}</td>
                <td>{{ manager.surname }}</td>
                <td>{{ manager.branch.name }}</td>
                <td><a href="{{ path('edit_manager',{id: manager.id}) }}">Изменить</a></td>
            </tr>
        {% endfor %}
    </table>
    <h1>Отделы</h1>
    <table class="table table-dark">
        <tr>
            <th>Номер</th>
            <th>Наименование отдела</th>
        </tr>
        {% for branch in branches %}
            <tr>
                <td>{{ branch.id }}</td>
                <td>{{ branch.name }}</td>
                <td><a class="text-warning" href="{{ path('edit_branch', {id: branch.id}) }}">Изменить</a></td>
                <td><a class="text-danger" href="{{ path('delete_branch', {id: branch.id}) }}">Удалить</a></td>
            </tr>
        {% endfor %}
    </table>
    <div>
        <br><br>
    <button class = "btn btn-black" type="button" name="button" onclick="location.href='index'">На главную страницу</button>
    </div>
{% endblock %}